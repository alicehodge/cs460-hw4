@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Movie Search</h1>
</div>

<div class="text-center mt-3">
    <form method="get" action="/search">
        <input class="form-control" id="search-input" placeholder="Search for movies..." />
        <button class="btn btn-lg btn-outline-primary" id="search-button">Search</button>
    </form>
</div>

<template id="movie-template">
        <div id="movie-id" class="row mt-3 movie-result">
            <div class="col-auto">
                <img id="movie-poster" src="https://placehold.co/200x300" width="200" />
            </div>
            <div class="col">
                <h5 id="movie-title"></h5>
                <h6 id="movie-releasedate"></h6>
                <p id="movie-overview"></p>
            </div>
        </div>
</template>

<div class="mt-3">
    <div id="search-results" class="container">
        @*JS generates result list w/ template here*@
    </div>
    <div id="error-message" class="alert alert-danger collapse" role="alert"></div>
</div>

<template id="movie-detail-template">
    <div class="row">
        <div class="col-auto">
            <img id="movie-detail-backdrop" src="https://placehold.co/200x300" width="200" />
        </div>
        <div class="col">
            <div class="row">
                <div class="col-auto">
                    <h3 id="movie-detail-title"></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-auto">
                    <h5>Genres:</h5>
                </div>
                <div class="col">
                    <h5 id="movie-detail-genres"></h5>
                </div>
            <div class="row">
                <div class="col-auto">
                    <h5>Release Date:</h4>
                </div>
                <div class="col">
                    <h5 id="movie-detail-releasedate"></h5>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h6>Runtime:</h6>
                    <p id="movie-detail-runtime"></p>
                </div>
                <div class="col">
                    <h6>Revenue:</h6>
                    <p id="movie-detail-revenue"></p>
                </div>
                <div class="col">
                    <h6>Popularity:</h6>
                    <p id="movie-detail-popularity"></p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <h6>Overview:</h5>
            <p id="movie-detail-overview"></p>
        </div>
    </div>
</template>

<template id="movie-cast-template">
    <div class="row">
        <div class="col-auto">
            <h6 id="movie-cast-name"></h6>
            <p id="movie-cast-character"></p>
        </div>
    </div>
</template>

<div id="detail-modal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Movie Detail</h5>
                <button id="modal-close-button" type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="movie-detail" class="container-fluid">
                    @*JS generates movie detail here*@
                </div>
                <div class="ms-3">
                    <h5>Cast:</h5>
                    <div id="movie-cast" class="container-fluid">
                        @*JS generates movie cast here*@
                    </div>
                </div> 
            </div>
        </div>
    </div>
</div>

